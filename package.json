{
  "name": "webapp-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "env-cmd next dev",
    "build": "next build",
    "start": "next start",
    "check:types": "tsc -p .",
    "check:format": "prettier --check .",
    "test": "yarn test:once --watch",
    "test:once": "NODE_ENV=test env-cmd jest --runInBand",
    "dc:up": "env-cmd sh -c \"cd dev; docker-compose up\"",
    "dc:destroy": "env-cmd sh -c \"cd dev; docker-compose down; docker-compose rm -f\""
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn check:format && yarn check:types",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "@prisma/client": "2.13.1",
    "apollo-server-micro": "^2.19.0",
    "graphql-request": "^3.4.0",
    "next": "10.0.4",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "swr": "^0.3.11"
  },
  "devDependencies": {
    "@prisma/cli": "2.13.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "babel-jest": "^26.6.3",
    "env-cmd": "^10.1.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "prettier": "2.2.1",
    "typescript": "^4.1.3"
  }
}
